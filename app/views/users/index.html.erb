<div class='container'>
	<div class='row'>
		<%= render 'layouts/list', user: @user, book: @book %>

		<div class='col-xs-9'>
			<table class="table table-striped">
				<h3>Users</h3>
				<thead>
					<tr>
						<th>Image</th>
						<th>Nmae</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<th><%= attachment_image_tag user, :profile_image, size: '50x50', fallback: 'noimg01.gif' %></th>
						<td><%= user.name %></td>
						<td><%= link_to 'Show', user_path(user) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>