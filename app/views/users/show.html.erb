<div class='container'>
	<div class='row'>
		<%= render 'layouts/list', book: @book, user: @user %>

		<div class='col-xs-9'>
			<table class="table table-striped">
				<h3>Books</h3>
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<th><%= attachment_image_tag @user, :profile_image, size: '50x50', fallback: 'noimg01.gif' %></th>
						<td><%=link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>