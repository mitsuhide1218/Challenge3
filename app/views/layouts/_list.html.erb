<div class='col-xs-3'>
	<% if @book.errors.any? %>
	  <div id="error_explanation" class="alert alert-danger">
	  	<h4><%= @book.errors.count %>件のerrorが発生しました。</h4>
	    <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>
		<table class='table table-striped'>
			<h3>User info</h3>
			<thead>
				<th>
					<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: '150x150', fallback: 'noimg01.gif' %></th>
				<tr>
					<th>name</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= @user.introduction %></th>
				</tr>
			</thead>
			<tbody>
			</tbody>
		</table>
		<%= link_to '', edit_user_path(@user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

		<h3>New book</h3>
		<%= form_for(@book) do |f| %>

		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Opinion</h4>
		<%= f.text_area :body %>

		<br><%= f.submit 'Create Book', class: 'btn btn-primary' %>

		<% end %>

</div>