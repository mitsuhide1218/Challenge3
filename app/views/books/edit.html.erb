<h2>Editing Book</h2>
	<%= form_for(@book) do |t| %>
	<% if @book.errors.any? %>
		  <div id="error_explanation" class="alert alert-danger">
		  	<h4><%= @book.errors.count %>件のerrorが発生しました。</h4>
		    <ul>
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		    </ul>
		  </div>
	<% end %>
		<table>
			<!--title-->
			<thead>
				<tr>
					<th>Title</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= t.text_field :title %></td>
				</tr>
			</tbody>

			<!--opinion-->
			<thead>
				<tr>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= t.text_area :body %></td>
				</tr>
			</tbody>
		</table>

		<%= t.submit 'Update Book', class: 'btn btn-primary' %>
	<% end %>

<br><%= link_to 'Show', book_path %> |
<%= link_to 'Back', books_path %>